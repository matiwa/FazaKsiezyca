<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/erok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj rok"
                android:inputType="number" />

            <EditText
                android:id="@+id/emiesiac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj miesiac"
                android:inputType="number" />

            <EditText
                android:id="@+id/edzien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj dzień"
                android:inputType="number" />

            <EditText
                android:id="@+id/egodzina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj godzinę"
                android:inputType="number" />

            <EditText
                android:id="@+id/eminuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj minutę"
                android:inputType="number" />

            <EditText
                android:id="@+id/esekunda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Podaj sekundę"
                android:inputType="number" />

            <Button
                android:id="@+id/btnwyznacz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="wyznacz"
                android:text="Faza księżyca" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>